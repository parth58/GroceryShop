@using GroceryShop.Models
@model GroceryShop.ViewModels.OrderViewModel

@{
    ViewBag.Title = "MyOrders";
}

<section class="flat-row shop-detail-content">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="flat-tabs style-1 has-border">
                    <div class="inner">
                        <ul class="menu-tab">
                            <li class="active">Pending</li>
                            <li>In Progress</li>
                            <li>Previous</li>
                        </ul>
                        <div class="content-tab">
                            <div class="content-inner">
                                <div class="container p-5">
                                    @if (! (Model.PendingOrders.ToList().Count() > 0))
                                    {
                                    <div class="alert alert-danger text-center h5" role="alert">
                                        Can't Find Any Pending Orders!
                                    </div>
                                    }
                                    @foreach (var item in Model.PendingOrders.ToList())
                                    {

                                        <div class="row">
                                            <div class="col-md-4 order-md-2 mb-4">
                                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                                    <span class="text-muted">Products</span>
                                                    <span class="badge badge-secondary badge-pill">@item.OrderItems.Count</span>
                                                </h4>
                                                <ul class="list-group mb-3">
                                                    @foreach (OrderItem item1 in (List<OrderItem>)@item.OrderItems)
                                                    {
                                                        <li class="list-group-item d-flex justify-content-between lh-condensed">

                                                            <div>
                                                                <img src="@item1.Product.ImageURL" class="rounded" alt="..." style="width:50px;height:50px;">

                                                                <h6 class="my-0">@item1.Product.Name</h6>
                                                                <small class="text-muted">@item1.Product.SellingPrice Rs.</small>
                                                            </div>
                                                            <span class="text-muted">Qty-&nbsp;@item1.Quantity</span>
                                                        </li>

                                                    }
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span>Total (INR)</span>
                                                        <strong>@item.TotalAmount Rs.</strong>
                                                    </li>
                                                </ul>

                                                <form class="card p-2">
                                                    <div class="form-group">
                                                        <label for="status">Status</label>
                                                        <input type="text" class="form-control" readonly value="@item.Status">

                                                    </div>
                                                </form>
                                            </div>
                                            <div class="col-md-8 order-md-1">
                                                <h4 class="mb-3">Billing address</h4>

                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label for="firstName">First name</label>
                                                        <input type="text" class="form-control" readonly value="@item.FirstName">

                                                    </div>
                                                    <div class="col-md-6 mb-3">
                                                        <label for="lastName">Last name</label>
                                                        <input type="text" class="form-control" readonly value="@item.LastName">

                                                    </div>
                                                </div>


                                                <div class="mb-3">
                                                    <label for="contact">Contact Number</label>
                                                    <input class="form-control" readonly value="@item.PhoneNumber">

                                                </div>

                                                <div class="mb-3">
                                                    <label for="address">Address</label>
                                                    <input type="text" class="form-control" readonly value="@item.Address1">

                                                </div>

                                                <div class="mb-3">
                                                    <label for="address2">Address 2 <span class="text-muted">(Optional)</span></label>
                                                    <input type="text" class="form-control" readonly value="@item.Address2">
                                                </div>

                                                <div class="row">

                                                    <div class="col-md-4 mb-3">
                                                        <label for="city">City</label>
                                                        <input type="text" class="form-control" readonly value="@item.City">

                                                    </div>
                                                    <div class="col-md-3 mb-3">
                                                        <label for="zip">Zip</label>
                                                        <input type="text" class="form-control" readonly value="@item.ZipCode">

                                                    </div>
                                                </div>


                                            </div>
                                        </div>

                                        <hr />
                                    }


                                </div>
                            </div><!-- /.content-inner -->
                            <div class="content-inner">
                                <div class="container p-5">
                                    @if (!(Model.InProgressOrders.ToList().Count() > 0))
                                    {
                                        <div class="alert alert-danger text-center h5" role="alert">
                                           Can't Find Any In-Progress Orders!
                                        </div>
                                    }
