@model GroceryShop.Models.Message

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container">
        <div class="row">
            <div class="col-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Name)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.Name)
            </div>

        </div>
        <div class="row">
            <div class="col-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Email)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.Email)
            </div>


        </div>
        <div class="row">
            <div class="col-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Subject)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.Subject)
            </div>

        </div>
        <div class="row">
            <div class="col-2 font-weight-bold">
                @Html.DisplayNameFor(model => model.Text)
            </div>
            <div class="col-10">
                @Html.DisplayFor(model => model.Text)
            </div>

        </div>
        <p class="mt-3">
            @*@Html.ActionLink("Delete", "Delete", new { id = Model.ID }, new { @class = "btn btn-primary" })*@
            <button class="btn btn-primary deleteMsgBtn" data-id="@Model.ID">Delete</button>

            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary ml-1" })
        </p>


    </div>

    
    <script>
    $(".deleteMsgBtn").click(function () {
        swal({
            title: "Confirm?",
            text: "Are you sure you want to delete this Message?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
			if (willDelete) {
				$.ajax({
					type: 'POST',
					url: '@Url.Action("Delete", "Messages")',
					data: {
						ID: $(this).attr('data-id')
					}
				})
				.done(function (response) {
					
					swal("Message deleted Successfully.", {
						icon: "success",
                    });
                    window.location.href = '@Url.Action("Index", "Messages")';
				})
				.fail(function (XMLHttpRequest, textStatus, errorThrown) {
					   swal("Error", "Please Try Again!", "warning");
				});

			}
        });
        });


    </script>    