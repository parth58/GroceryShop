@model GroceryShop.Models.Message

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    <div class="container">
        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Message</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Email)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Subject)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Subject)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Text)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Text)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @*<input type="submit" value="Delete" class="btn btn-primary" />*@
            <button  class="btn btn-primary deleteMsgBtn" data-id="@Model.ID">Delete</button>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary ml-1" })
        </div>
            }
        </div>

    </div>

<script>
    $(".deleteMsgBtn").click(function () {
        swal({
            title: "Confirm?",
            text: "Are you sure you want to delete this Message?",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
			if (willDelete) {
				$.ajax({
					type: 'POST',
					url: '@Url.Action("Delete", "Messages")',
					data: {
						ID: $(this).attr('data-id')
					}
				})
				.done(function (response) {
					$("#tableContiner").html(response);

					swal("Message deleted Successfully.", {
						icon: "success",
					});
				})
				.fail(function (XMLHttpRequest, textStatus, errorThrown) {
					alert("FAIL");
				});

			}
        });
        });
        

</script>